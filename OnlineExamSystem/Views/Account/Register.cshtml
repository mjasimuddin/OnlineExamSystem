<div id="page-wrapper">
    <div class="login-page ">
        <h2 class="title1">@ViewData["Title"]</h2>

        <div class="widget-shadow">
            <div class="login-body">
                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <label id="ShowEmail" style="font: initial; color: black"></label>
                        <input type="email" class="user" id="Email" name="Email" placeholder="Enter Your Email" required="">

                        <label id="ShowPassword" style="font: initial; color: black"></label>
                        <input type="password" name="Password" id="Password" class="lock" placeholder="Password" required="">

                        <label id="ConfPassword" style="font: initial; color: black"></label>
                        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="lock" placeholder="Confirm Password" required="">
                        
                        <input type="submit" name="Register" value="Register">
                        <div class="registration">
                            Already Registered.
                            <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Login</a>
                        </div>
                        <br />
                        <h4 style="color: red; text-align: center">@ViewBag.Msg</h4>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


